<!DOCTYPE html>
<html lang="en">

<head>
<%- include ('./partials/head') %>
<title>Carga de producto</title>
<link rel="stylesheet" href="/css/forms.css"> 
<script src="/js/productAdd.js"></script> 
</head>

<body>
    <%- include ('./partials/header') %>
    <main>
        <div class="upload-form">
            <form action="/product/new" method="POST" enctype="multipart/form-data" class="productAdd wraper">
                <div class="newProduct">
                    <h2>
                        Subí un producto
                    </h2>
                </div>
                <div class="input">
                    <label for="name">Nombre del producto:</label>
                    <input type="text" name="name" id="name">
                    <p class="required name-error"></p>
                </div>
                <div class="input">
                    <label for="price">Precio:</label>
                    <input type="text" name="price" id="price">
                    <p class="required price-error"></p>
                </div>
                <div class="input">
                    <label for="description">Descripción:</label>
                    <input type="text" name="description"  id="description">
                    <p class="required description-error"></p>
                </div>
                <div class="input">
                    <label for="product-img">Imagen:</label>
                    <input type="file" name="product-img" id="product-img">
                    <p class="required img-error"></p>
                </div>
                <div class="input">
                    <div id="radio-button">
                        <label for="gender">Colección:</label> 
                        <div>
                            <input type="radio" name="gender" value="niñas" checked>
                            <label> Niñas </label>
                        </div>
                        <div>
                            <input type="radio" name="gender" value="niños">
                            <label> Niños </label>
                        </div>
                    </div>                 
                </div>
                <div class="input">
                    <button class="submit" type="submit">Cargar producto</button>
                </div>
            </form>
        </div>
        <%- include('./partials/footer') %> 
    </main>
</body>
</html>