<%- include ('./partials/head') %>
    <title>Amamos el color!</title>
    <link rel="stylesheet" href="/css/product_styles.css">
</head>

<body>
    <%- include ('./partials/header') %>

    <main>

        <div class="product-detail">
            <div class="product-images">
                <img class="product-main-img" src=<%= producto.img %> alt=<%= producto.name %>> 
            </div>

            <div class="product-description">
                <h3 class="item"><%= producto.name %></h3>
                <h4 class="price"> <%= producto.price %></h4>
                <p>Lorem ipsum dolor sit amet consectetur, adipisicing elit. Fuga suscipit soluta voluptas error fugit minima a dolorem? Repellat officiis corporis nesciunt temporibus! </p>
                <div class="quantity"> <p><input type="Cantidad"> Cantidad </p></div>
                <div class="buy-button"> <a href="/cart">COMPRAR</a></div>

            </div>
        </div>
      
        <section class="recomendados">
            <h4>Te podr√≠a interesar</h4>
            <div class="recommended-products">
                <% for(let i=0; i<4; i++){ %>
                    <% let item = productos[i] %>
                    <% if( item.id !=producto.id) { %>
                        <div class="product-recommended">
                            <a href="/product/<%= item.id %>"> <img src=<%= item.img %> alt=<%= item.name %>>
                                <div>
                                    <h4 class="product-name">
                                        <%= item.name %>
                                    </h4>
                                    <p class="price"><%= item.price %></p>
                                </div>
                            </a> 
                        </div>          
                <% }} %>
                <!--        <div id="imagen_producto_2" class="imagen_producto"></div>
                <div id="imagen_producto_3" class="imagen_producto"></div>
                <div id="imagen_producto_4" class="imagen_producto"></div> -->
            </div>
        </section>

        <section class="suscribe">
            <a href="/user/register" > Registrarse</a> 
        </section>
        
        
    </main>
    <%- include('./partials/footer') %> 
</body>
</html>